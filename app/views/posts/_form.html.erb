<%= form_for(@post, remote: true, :html => {:multipart => true}) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="newpost clearfix"> <!--clearfix -  very important hack-->
    <div class="form-group">
  		<%= f.text_area :content, size: "50x2", :placeholder => 'What is your impression?' %>
  	</div>

    <div class="image-preview" style="display:none">
    <%= icon('times', class:"pull-right deletePhoto")%>
    </div>

    <div class="fileUpload">
      <span> <%= icon('camera', 'Upload Image', style: 'font-size:20px')%> </span>
      <%= f.file_field :post_image, class:'upload', id: "uploadBtn" %>
    </div>

    <%= f.hidden_field :longitude, id: 'post_lon' %>
    <%= f.hidden_field :latitude, id: 'post_lat' %>

    <%= request.location.city %>

    <div class="pull-right">
      <%= f.submit "Post", :disable_with => 'Posting....'%>
    </div>
  </div>

<% end %>
