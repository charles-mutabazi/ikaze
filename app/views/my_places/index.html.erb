<% if @my_places.empty? %>
  <div class="empty-div">

    <i class="glyphicon glyphicon-map-marker icon-above"></i>
    <br>

    List of GPS Coordinates will appear here!
  </div>
<% else %>

<p id="notice"><%= notice %></p>
<div class="row">

  <div class="col-sm-10">
    <h2>Captured GPS Coordinates <small id="place_counter">(<%= @my_places.count %>)</small></h2>
  </div>

  <div class="col-sm-2">
    <%= link_to "Delete All", remove_all_my_places_path, :class => "btn btn-xs btn-danger", :method => :get, data: { confirm: 'Are you sure? This Action can not be undone'} %>
    <!-- <a href="#" class="btn btn-xs btn-danger"> Delete All </a> -->
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Device</th>
      <th>Address</th>
      <th>Cooridates</th>
      <th>Captured on</th>
      <th>Added On</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @my_places.each do |my_place| %>
      <tr id="place_<%= my_place.id%>">
        <td><%= my_place.device_id %></td>
        <td><%= my_place.address %></td>
        <td>(<%= my_place.latitude %>, <%= my_place.longitude %>)</td>
        <td><%= my_place.captured_at %></td>
        <td><%= my_place.created_at %></td>
        <td>
          <%= link_to my_place_path(my_place), method: :delete, remote: true do icon('trash') end %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'See Visuals', visuals_path %>

<%end%>
